<main>
  <h2>会員情報編集</h2>
  
  <%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>

      <div>
        <%= f.label :"氏名" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>

      <div>
        <%= f.label :"フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>

      <div>
        <%= f.label :"メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete %>
      </div>

      <div>
        <%= f.label :"郵便番号" %>
        <%= f.text_field :postal_code %>
      </div>

      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :adress %>
      </div>

      <div>
        <%= f.label :"電話番号" %>
        <%= f.text_field :telephone_number %>
      </div>


      <div>
        <div>
          <%= f.submit "編集内容を保存する" %>
          <%= link_to '退会する', unsubscribe_customer_path %>
        </div>
      </div>
  <% end 
</main>
