<main>
  <h2>商品情報入力</h2>
  
  <%= form_with model: @order, url: orders_confirm_path do |f| %>
    <div>
      <h3><%= f.label :payment_method, "支払方法" %></h3>
      <%= f.radio_button :payment_method, "クレジットカード", checked: "checked" %>
      <%= f.label :payment_method, "クレジットカード" %>
      <br>
      <%= f.radio_button :payment_method, "銀行振込" %>
      <%= f.label :payment_method, "銀行振込" %>
    </div>
    <div class="delivery-address-select">
      <h3><%= f.label :adress, "お届け先" %></h3>
      <%= f.radio_button :adress_option, 0, checked: "checked" %>
      <%= f.label :adress, "ご自身の住所" %>
      <br>
      <%= @customer.postal_code.to_s.insert(3, "-") %><br/>
      <%= @customer.adress %><br/>
      <%= @customer.last_name %><%= @customer.first_name %>
      <br>
      <%= f.radio_button :adress_option, 1 %>
      <%= f.label :adress, "登録済住所から選択" %>
      <br>
      <%= f.collection_select :id, @adresses, :id, :order_ship,{prompt: "選択してください"},class: "form-control" %>
      <br>
      <%= f.radio_button :adress_option, 2 %>
      <%= f.label :adress, "新しいお届け先" %>
      <br>
      <div class="row">
          <div class="col-lg-2">
            <%= f.label :shipping, "郵便番号(ハイフンなし）" %>
          </div>
          <div>
            <%= f.text_field :postcode,class:"col-lg-2" %>
          </div>
      </div>
      </br>
      <div class="row">
          <div class="col-lg-2">
            <%= f.label :shipping, "住所" %>
          </div>
          <div>
            <%= f.text_field :city , class:"col-lg-4"%>
          </div>
      </div>
      </br>
      <div class="row">
          <div class="col-lg-2">
            <%= f.label :shipping, "宛名" %>
          </div>
          <div>
            <%= f.text_field :name , class:"col-lg-2"%>
          </div>
      </div>
      <br>
      <div class="text-center">
      <%= f.submit "確認画面へ進む", class:"btn btn-lg btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
</main>
