<main>
  <h2>商品情報入力</h2>

  <%= form_with model: @order do |f| %>
    <div>
      <h3><%= f.label :payment_method, "支払方法" %></h3>
        <%= f.radio_button :payment_method, "credit_card" %>
        <%= f.label :payment_method, "クレジットカード" %>
        <br>
        <%= f.radio_button :payment_method, "transfer" %>
        <%= f.label :payment_method, "銀行振込" %>
    </div>
    <div>
      <h3><%= f.label :address, "お届け先" %></h3>
        <%= f.radio_button :address, 0 %>
        <%= f.label :address, "ご自身の住所" %>
        <br>
        <%= @customer.postal_code.to_s.insert(3, "-") %><br/>
        <%= @customer.address %><br/>
        <%= @customer.last_name %><%= @customer.first_name %>
        <br>
        <%= f.radio_button :address, 1 %>
        <%= f.label :address, "登録済住所から選択" %>
        <br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>

        <br>
        <%= f.radio_button :address, 2 %>
        <%= f.label :address, "新しいお届け先" %>
        <br>
          <div>
            <%= f.label :postal_code, "郵便番号(ハイフンなし）" %>
          </div>
          <div>
            <%= f.text_field :postal_code,class:"col-lg-2" %>
          </div>
        <br>
          <div class="col-lg-2">
            <%= f.label :address, "住所" %>
          </div>
          <div>
            <%= f.text_field :address , class:"col-lg-4"%>
          </div>
        <br>
        <div class="row">
          <div class="col-lg-2">
            <%= f.label :naame, "宛名" %>
          </div>
          <div>
            <%= f.text_field :name , class:"col-lg-2"%>
          </div>
      </div>
      <br>
      <div class="text-center">
      <%= f.submit "確認画面へ進む", class:"btn btn-lg btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
</main>
