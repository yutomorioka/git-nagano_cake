<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row form-group">
    <%= f.label :名前, class: "col-xs-2" %>
    <%= f.label :"(姓)", class: "col-xs-2" %>
    <%= f.text_field :first_name, autofocus: true, class: "col-lg-3" %>
    <%= f.label :"(名)", class: "col-xs-2" %>
    <%= f.text_field :last_name, autofocus: true, class: "col-lg-3" %>
  </div>

  <div class="row form-group">
    <%= f.label :フリガナ, class: "col-xs-2" %>
    <%= f.label :"(セイ)", class: "col-lg-2" %>
    <%= f.text_field :kana_first_name, autofocus: true, class: "col-lg-3" %>
    <%= f.label :"(メイ)", class: "col-lg-2" %>
    <%= f.text_field :kana_last_name, autofocus: true, class: "col-lg-3" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="row form-group">
    <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-4" %>
    <%= f.text_field :postal_code, autofocus: true, class: "col-lg-3" %>
  </div>

  <div class="row form-group">
    <%= f.label :住所, class: "col-lg-3" %>
  <div class="col-lg-1"></div>
    <%= f.text_field :address, autofocus: true, class: "col-lg-3" %>
  </div>

  <div class="row form-group">
    <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-4" %>
    <%= f.text_field :telephone_number, autofocus: true, class: "col-lg-3" %>
  </div>


  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済の方</h2>
<%= render "public/shared/links" %>
