<main>
  <h2>配送先編集</h2>
  
  <%= form_with model:@adress, url:adress_path do |f| %>
    <div>
      <%= f.label :"郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code %>
    </div>
    <div>
      <%= f.label :"住所" %>
      <%= f.text_field :adress %>
    </div>
    <div>
      <%= f.label :"宛名" %>
      <%= f.text_area :name %>
    </div>
      <%= f.submit "登録する" %>
  <% end %>
  
</main>