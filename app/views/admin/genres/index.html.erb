<main>
  <div class="container">
  <div class="row">
    <div class="col-md-6">
<h2 class="bg-light mt-3 col-8">ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <h4 class="mt-4">ジャンル名</h4>
    <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "btn btn-primary genre_btn ml-3" %>
<% end %>
<h4 class="bg-light mt-4">ジャンル</h4>
<table class='table genre-table'>
  <% @genres.each do |genre| %>
  <tbody class="genre_area">
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary genre_btn" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

</div>
</div>
</div>

</main>