<main>
  <h2>商品新規登録</h2>

  <%= form_with model: @item,url:admin_items_path do |f| %>
    <%= f.label :商品画像 %>
      <%= f.file_field :image %>
    <%= f.label :商品名 %>
      <%= f.text_field :name %>
    <%= f.label :商品説明 %>
      <%= f.text_area :introduction %>
    <%= f.label :ジャンル %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "--選択してください--"} %>
    <%= f.label :税抜価格 %>
      <%= f.text_field :price %>
    <%= f.label :販売ステータス %>
      <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %>
    <div>
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</main>