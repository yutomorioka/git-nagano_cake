<main>
  <h2>商品詳細</h2>

  <th><%= image_tag @item.get_image(100,100) %></th>

  <table>
    <tr>
      <th>商品名</th>
        <td><%= @item.name %></td>
      <th>商品説明</th>
        <td><%= @item.introduction %></td>
      <th>ジャンル</th>
        <td><%= @item.genre.name %></td>
      <th>税込価格(税抜価格)</th>
        <td>
          <%= @item.price.to_s(:delimited) %>
          (<%= @item.add_tax_price.to_s(:delimited) %>) 円
        </td>
      <th>販売ステータス</th>
        <% if @item.is_active == true %>
          <%= "販売中" %>
        <% else %>
          <%= "販売停止中" %>
        <% end %>
    </tr>
  </table>

   <%= link_to "編集する",edit_admin_item_path(@item) %>

</main>