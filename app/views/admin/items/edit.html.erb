<main>
  <div class="container">
    
  <h3 class="mt-3">商品編集</h3>
  <div class="row">
  <%= form_with model: @item, url:admin_item_path do |f| %>
    <div class="form-group">
    <%= f.label :商品画像 %>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
    <%= f.label :商品名 %>
      <%= f.text_field :name, size:"45x5" %>
    </div>
    <div class="form-group">
      <div class="align-top">
    <%= f.label :商品説明 %>
      </div>
      <%= f.text_area :introduction, size:"55x5" %>
    </div>
    <div class="form-group">
    <%= f.label :ジャンル %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: "--選択してください--"} %>
    </div>
    <div class="form-group">
    <%= f.label :税抜価格 %>
      <%= f.text_field :price %>
    </div>
    <div class="form-group">
    <%= f.label :販売ステータス %>
      <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %>
    </div>
    <div>
    <%= f.submit "変更を保存" %>
    </div>
  <% end %>
  </div>
</div>
</main>
